{
  "name": "country-currency-api-jawsdb",
  "version": "1.0.0",
  "description": "Country Currency & Exchange API with JawsDB MySQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage --forceExit",
    "test:watch": "jest --watch",
    "test:integration": "jest tests/integration.test.js",
    "test:countries": "jest tests/countries.test.js",
    "test:status": "jest tests/status.test.js"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "axios": "^1.5.0",
    "canvas": "^2.11.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "services/**/*.js",
      "routes/**/*.js",
      "middleware/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}